msgid "plugins.blocks.twitter.title"
msgstr "Twitter Block"

msgid "plugins.blocks.twitter.desc"
msgstr "This plugin provides a Twitter tweet in the sidebar."

msgid "plugins.blocks.twitter.tweet.title"
msgstr "Title of the Twitter block (e.g. \"Tweets by @PsychOpen\")"

msgid "plugins.blocks.twitter.tweet.url"
msgstr "URL to the Tweet Feed (e.g. https://twitter.com/psychopen)"

msgid "plugins.blocks.twitter.tweet.color"
msgstr "Color for the internal links (e.g. #8283c6)"

msgid "plugins.blocks.twitter.tweet.height"
msgstr "Maximum height of the block (e.g. 500)"

msgid "plugins.blocks.twitter.tweet.options"
msgstr "More Tweet Options (e.g. \"nofooter noborders noheader\")"

msgid "plugins.blocks.twitter.tweet.limit"
msgstr "Number of tweets (e.g. 3). No value causes the complete feed to be loaded."

msgid "plugins.blocks.twitter.cookie.warning"
msgstr "This plugin uses a cookie from Twitter! Please add a suitable entry to your cookie policy. You can find further information <a href=\"https://docs.pkp.sfu.ca/gdpr/en/what-policies#3-cookie-policy\" target=\"_blank\" rel=\"noopener\">here</a>."
