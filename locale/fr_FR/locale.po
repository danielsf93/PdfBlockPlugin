msgid "plugins.blocks.twitter.title"
msgstr "Bloc Twitter"

msgid "plugins.blocks.twitter.desc"
msgstr "Ce plugin permet d'afficher un fil Twitter dans la barre latérale."

msgid "plugins.blocks.twitter.tweet.title"
msgstr "Titre du bloc Twitter (par exemple « Tweets par @PsychOpen »)"

msgid "plugins.blocks.twitter.tweet.url"
msgstr "URL du fil Twitter (par exemple https://twitter.com/psychopen)"

msgid "plugins.blocks.twitter.tweet.color"
msgstr "Couleur des liens internes (par exemple #8283c6)"

msgid "plugins.blocks.twitter.tweet.height"
msgstr "Hauteur maximale du bloc (par exemple 500)"

msgid "plugins.blocks.twitter.tweet.options"
msgstr "Plus d'options de tweet (par exemple « nofooter noborders noheader »)"

msgid "plugins.blocks.twitter.tweet.limit"
msgstr "Nombre de tweets (par exemple 3). En l'absence de valeur, l'ensemble du fil sera affiché."

msgid "plugins.blocks.twitter.cookie.warning"
msgstr "Ce plugin utilise un cookie de Twitter!"
        " Veuillez ajuster votre politique en matière de cookies en conséquence."
        " Vous trouverez plus d'informations <a href=\"https://docs.pkp.sfu.ca/gdpr/en/what-policies#3-cookie-policy\" target=\"_blank\" rel=\"noopener\">ici</a>."
